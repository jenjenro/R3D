        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewlv5_1" />


    <LinearLayout
        android:id="@+id/linearLayoutlvl5_1"
        android:layout_width="271dp"
        android:layout_height="225dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStatementlvl5">

        <ImageView
            android:id="@+id/imageViewlvl5_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:scaleX="3"
            android:scaleY="3"
            android:src="@drawable/extra5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnOp3lv5Yellow"
        android:layout_width="181dp"
        android:layout_height="31dp"
        android:background="@drawable/botton_background_yellow"
        android:fontFamily="@font/gotham"
        android:text="17"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOp1lv5Blue"
        android:layout_width="181dp"
        android:layout_height="31dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/botton_background_light_blue"
        android:fontFamily="@font/gotham"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnOp2lv5Red"
